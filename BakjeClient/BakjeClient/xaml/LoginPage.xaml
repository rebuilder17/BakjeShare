<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BakjeClient.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="40" Text="로그인" Margin="0,0,0,30" />

            <Label FontSize="20" Text="ID" />
            <Entry FontSize="20" Text="{Binding id}" />
            <Label FontSize="20" Text="패스워드" />
            <Entry IsPassword="True" FontSize="20" Text="{Binding password}" />

            <Button Text="로그인" FontSize="30" Margin="0,40,0,0" HeightRequest="80" Clicked="BtnLogin_Clicked" />
            <Button Text="회원 가입" FontSize="30" Margin="0,10,0,0" HeightRequest="80" Clicked="BtnRegister_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>