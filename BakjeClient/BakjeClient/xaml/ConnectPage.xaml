<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BakjeClient"
             x:Class="BakjeClient.ConnectPage">

    <StackLayout>
        <Label FontSize="40" Text="BakjeShare" Margin="0,0,0,40" HorizontalOptions="Center" />
        <Label FontSize="30" Text="Server" />
        <Entry Placeholder="URL or IP" FontSize="30" Text="{Binding Path=urlOrIP}" />

        <Button Text="서비스 접속" FontSize="30" Margin="0,40,0,0" HeightRequest="80" Clicked="Button_Clicked" />
    </StackLayout>
</ContentPage>